<template>
  <a-card :bordered="false">
    <div class="table-operator">
      <a-button type="primary" icon="plus" @click="hanldleAdd()">新建</a-button>
      <a-popconfirm
        title="是否删除?"
        ok-text="删除"
        cancel-text="取消"
        placement="top"
        @confirm="handleDelete" :disabled="!hasSelected()">
        <a-button type="primary" icon="plus" :disabled="!hasSelected()" :loading="deleteLoading">删除</a-button>
      </a-popconfirm>
      <a-button type="primary" icon="redo" @click="getDataList()">刷新</a-button>
      <div class="queryParamLeyword">
        <c-select v-model="queryParam.user_id" url="/Base_Manage/Base_User/GetUserOptionList" searchMode="server" suffixIcon="search" placeholder="可输入测评对象" @handleInput="getUser_id"></c-select>
      </div>
    </div>

    <!-- <div class="table-page-search-wrapper">
      <a-form layout="inline">
        <a-row :gutter="10">
          <a-col :md="4" :sm="24">
            <a-form-item label="查询类别">
              <a-select allowClear v-model="queryParam.condition">
                <a-select-option key="Project_Code">项目地编号</a-select-option>
                <a-select-option key="Project_Name">项目地名称</a-select-option>
              </a-select>
            </a-form-item>
          </a-col>
          <a-col :md="4" :sm="24">
            <a-form-item>
              <a-input v-model="queryParam.keyword" placeholder="关键字" />
            </a-form-item>
          </a-col>
          <a-col :md="6" :sm="24">
            <a-button type="primary" @click="() => {this.pagination.current = 1; this.getDataList()}">查询</a-button>
            <a-button style="margin-left: 8px" @click="() => (queryParam = {})">重置</a-button>
          </a-col>
        </a-row>
      </a-form>
    </div> -->

    <a-table
      ref="table"
      :columns="columns"
      :rowKey="row => row.id"
      :dataSource="data"
      :pagination="pagination"
      :loading="loading"
      @change="handleTableChange"
      :rowSelection="{ selectedRowKeys: selectedRowKeys, onChange: onSelectChange }"
      :bordered="true"
      size="small"
    >
      <template slot="status" slot-scope="text, record">
        <template v-if="record.status && record.status === 1">
          <span style="color: rgb(255, 0, 0)">{{record.statusText}}</span>
        </template>
        <template v-else-if="record.status && record.status === 2">
          <span style="color: rgb(26, 188, 156)">{{record.statusText}}</span>
        </template>
        <template v-else="record.status && record.status === 3">
          <span style="color: rgb(121, 121, 121)">{{record.statusText}}</span>
        </template>
      </template>
      <template slot="action" slot-scope="text, record">
        <!--<a @click="handleEdit(record.id, 'edit')">编辑</a>-->
        <!--<a-divider type="vertical" />-->
        <a @click="handleEdit(record.id, 'copy')">复制</a>
        <a-divider type="vertical" />
        <!--<a @click="handleEdit(record.id, 'view')" v-else>查看</a>-->
        <a @click="handleMeasureMent(record.id, 'add')" v-if="record.status === 1" style="color: rgb(255, 0, 0)">测评</a>
        <a @click="handleMeasureMent(record.id, 'view')" v-else>查看</a>
      </template>
    </a-table>

    <edit-form ref="editForm" :parentObj="this"></edit-form>
    <measure-ment ref="measureMent" :parentObj="this"></measure-ment>
  </a-card>
</template>

<script>
import EditForm from './EditForm'
import MeasureMent from './MeasureMent'
import CSelect from '@/components/CSelect/CSelect'

const columns = [
  { title: '编号', dataIndex: 'id', width: '165px' },
  { title: '测评名称', dataIndex: 'evaluation_name' },
  { title: '测评对象', dataIndex: 'user_name' },
  { title: '创建者', dataIndex: 'create_user' },
  { title: '创建时间', dataIndex: 'created_time' },
  { title: '结束时间', dataIndex: 'completion_time' },
  { title: '状态', dataIndex: 'status', scopedSlots: { customRender: 'status' }, width: '60px'},
  { title: '操作', dataIndex: 'action', scopedSlots: { customRender: 'action' } ,width: '100px'}
]

export default {
  components: {
    EditForm, MeasureMent, CSelect
  },
  mounted() {
    this.getDataList()
  },
  data() {
    return {
      data: [],
      pagination: {
        current: 1,
        pageSize: 10,
        showTotal: (total, range) => `总数:${total} 当前:${range[0]}-${range[1]}`
      },
      filters: {},
      sorter: { field: 'status', order: 'asc' },
      loading: false,
      deleteLoading: false,
      columns,
      queryParam: {},
      selectedRowKeys: [],
    }
  },
  methods: {
    handleTableChange(pagination, filters, sorter) {
      this.pagination = { ...pagination }
      this.filters = { ...filters }
      this.sorter = { ...sorter }
      this.getDataList()
    },
    getUser_id (data) {
      data.thisOptions.forEach(item => {
        if (data.value === item.value) {
          this.queryParam.user_name = item.text
        }
      })
      this.getDataList()
    },
    getDataList() {
      this.selectedRowKeys = []
      this.loading = true
      this.$http
        .post('/HrAssessment/GetHrEvaluationList', {
          PageIndex: this.pagination.current,
          PageRows: this.pagination.pageSize,
          SortField: this.sorter.field || 'status',
          SortType: this.sorter.order,
          Search: this.queryParam,
          ...this.filters
        }).then(resJson => {
          console.log(resJson)
          this.loading = false
          if (resJson.Success) {
            this.data = resJson.Data
            const pagination = { ...this.pagination }
            pagination.total = resJson.Total
            this.pagination = pagination
          }
        })
    },
    onSelectChange(selectedRowKeys) {
      this.selectedRowKeys = selectedRowKeys
      this.deleteLoading = false
    },
    hasSelected() {
      return this.selectedRowKeys.length > 0
    },
    handleDelete () {
      this.deleteLoading = true
      console.log(this.selectedRowKeys)
      this.$http.post('/HrAssessment/DeleteHrEvaluationInfo', this.selectedRowKeys).then(resJson => {
        console.log(resJson)
        this.deleteLoading = false
        if (resJson.Success) {
          this.$message.success('操作成功!')
          this.getDataList()
        } else {
          this.$message.error(resJson.Msg)
        }
      })
    },
    hanldleAdd() {
      this.$refs.editForm.openForm()
    },
    handleEdit(id, type) {
      this.$refs.editForm.openForm({
        id: id,
        type: type
      })
    },
    // 测评 查看测评
    handleMeasureMent (id, type) {
      this.$refs.measureMent.openForm({
        id: id,
        type: type
      })
    }
  }
}
</script>
<style type="text/css">
  .queryParamLeyword{float: right;width: 150px;}
  .queryParamLeyword .ant-select{width: 100%}
